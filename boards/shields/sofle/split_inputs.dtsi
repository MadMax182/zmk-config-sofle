/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        glidepoint_split: glidepoint_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    glidepoint0_listener: glidepoint0_listener {
        compatible = "zmk,input-listener";
        status = "disabled";

    };
};